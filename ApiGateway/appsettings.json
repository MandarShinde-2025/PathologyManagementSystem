{
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "Anonymous"
      },
      "patient_route": {
        "ClusterId": "patient_cluster",
        "Match": {
          "Path": "/patient/{**catch-all}"
        },
        "AuthorizationPolicy": "Anonymous"
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_service": {
            "Address": "http://localhost:5101"
          }
        }
      },
      "patient_cluster": {
        "Destinations": {
          "patient_service": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}